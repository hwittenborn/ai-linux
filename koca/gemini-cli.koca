pkgname=gemini-cli
pkgver=0.29.5
pkgrel=1
pkgdesc='Interact with Google Gemini AI models from the command-line'
arch=('x86_64')

build() {
    curl -fsSL https://bun.sh/install | bash
    curl -L "https://github.com/google-gemini/gemini-cli/releases/download/v${pkgver}/gemini.js" -o gemini.js
    ~/.bun/bin/bun build --compile --production --outfile=gemini gemini.js
}

package() {
    install -Dm 755 "gemini" "${pkgdir}/usr/bin/gemini"
}
